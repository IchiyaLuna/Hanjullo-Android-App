<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:scale_base_width="420"
        app:scale_base_height="112"
        android:background="@drawable/bg_calendar_item_4">

        <TextView
            android:id="@+id/c_item4_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_left="155"
            app:scale_top="25"
            app:scale_width="60"
            app:scale_height="30"
            app:scale_textsize="20"

            android:fontFamily="@font/font_pretendard_regular"
            android:textColor="@color/white"

            android:gravity="center"
            android:text="@string/default_loading" />

        <ImageView
            android:id="@+id/c_item4_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/img_flag_4"

            app:scale_left="230"
            app:scale_top="25"
            app:scale_width="61"
            app:scale_height="82"
            android:contentDescription="@string/calendar_flag" />
    </com.ssomai.android.scalablelayout.ScalableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>