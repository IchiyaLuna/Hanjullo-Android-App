<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_100"
    tools:context=".ToSActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:scale_base_width="360"
        app:scale_base_height="640">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_height="20"
            app:scale_left="130"
            app:scale_top="65"
            app:scale_width="100"
            app:scale_textsize="18"

            android:lineHeight="25dp"
            android:fontFamily="@font/font_pretendard_medium"
            android:gravity="center"
            android:includeFontPadding="false"

            android:text="@string/tos_title_text"

            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tosPrivacyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_height="15"
            app:scale_left="70"
            app:scale_top="105"
            app:scale_width="185"
            app:scale_textsize="14"

            android:fontFamily="@font/font_pretendard_medium"
            android:textColor="@color/white"
            android:gravity="start"
            android:includeFontPadding="false"
            android:letterSpacing="-0.04"

            android:text="@string/tos_privacy_select_text"/>

        <CheckBox
            android:id="@+id/tosPrivacyCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/check_auto_login"

            app:scale_height="15"
            app:scale_left="255"
            app:scale_top="105"
            app:scale_width="15" />

        <TextView
            android:id="@+id/tosPrivacyContentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_height="170"
            app:scale_left="55"
            app:scale_top="125"
            app:scale_width="250"
            app:scale_textsize="16"

            android:lineHeight="25dp"
            android:fontFamily="@font/font_pretendard_regular"
            android:textColor="@color/white"
            android:gravity="start"
            android:includeFontPadding="false"
            android:padding="20dp"
            android:scrollbars="vertical"

            android:background="@drawable/bg_tos"

            android:text="테스트용어쩌구저쩌구입니다라라라라라ㅏ라"/>

        <TextView
            android:id="@+id/tosEULATextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_height="15"
            app:scale_left="70"
            app:scale_top="325"
            app:scale_width="185"
            app:scale_textsize="14"

            android:fontFamily="@font/font_pretendard_medium"
            android:textColor="@color/white"
            android:gravity="start"
            android:includeFontPadding="false"
            android:letterSpacing="-0.04"

            android:text="@string/tos_eula_select_text"/>

        <CheckBox
            android:id="@+id/tosEULACheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/check_auto_login"

            app:scale_height="15"
            app:scale_left="255"
            app:scale_top="325"
            app:scale_width="15" />

        <TextView
            android:id="@+id/tosEULAContentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_height="170"
            app:scale_left="55"
            app:scale_top="345"
            app:scale_width="250"
            app:scale_textsize="16"

            android:lineHeight="25dp"
            android:fontFamily="@font/font_pretendard_regular"
            android:textColor="@color/white"
            android:gravity="start"
            android:includeFontPadding="false"
            android:padding="20dp"
            android:scrollbars="vertical"

            android:background="@drawable/bg_tos"

            android:text="테스트용어쩌구저쩌구입니다라라라라라ㅏ라아아아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ아아ㅏ"/>


        <Button
            android:id="@+id/tosNextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_height="32"
            app:scale_left="136"
            app:scale_textsize="14"
            app:scale_top="540"
            app:scale_width="88"

            android:background="@drawable/btn_normal_selector"
            android:text="@string/next_text"
            android:textColor="@color/white"
            android:fontFamily="@font/font_pretendard_regular"/>
    </com.ssomai.android.scalablelayout.ScalableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>