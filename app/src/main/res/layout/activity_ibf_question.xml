<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_100"
    tools:context=".IBFQuestionActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scale_base_height="640"
        app:scale_base_width="360">


        <TextView
            android:id="@+id/ibfTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_width="200"
            app:scale_height="30"
            app:scale_left="80"
            app:scale_textsize="18"
            app:scale_top="120"

            android:labelFor="@id/stepBAnswerEditText"

            android:fontFamily="@font/pretendard_medium"
            android:gravity="top|center_horizontal"

            android:textColor="@color/white"
            android:text="@string/ibf_b_title_text"/>

        <TextView
            android:id="@+id/ibfQuestionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_width="260"
            app:scale_height="30"
            app:scale_left="50"
            app:scale_textsize="14"
            app:scale_top="150"

            android:labelFor="@id/ibfAnswerEditText"

            android:fontFamily="@font/pretendard_medium"
            android:gravity="center"

            android:textColor="@color/white" />

        <EditText
            android:id="@+id/ibfAnswerEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_width="230"
            app:scale_height="90"
            app:scale_left="65"
            app:scale_top="210"
            app:scale_textsize="18"

            android:background="@drawable/bg_ibf_answer_input"
            android:padding="10dp"
            android:gravity="center"

            android:maxLines="3"
            android:maxLength="140"

            android:autofillHints="null"
            android:inputType="textMultiLine"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/charNumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_width="60"
            app:scale_height="20"
            app:scale_left="220"
            app:scale_top="305"
            app:scale_textsize="12"

            android:fontFamily="@font/pretendard_regular"
            android:gravity="end|center_vertical"

            android:textColor="@color/white"
            android:text="@string/charCount_text_default"/>

        <Button
            android:id="@+id/ibfNextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_answer_btn"

            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/white"

            android:stateListAnimator="@null"

            app:scale_height="32"
            app:scale_left="150"
            app:scale_top="500"
            app:scale_width="60"
            app:scale_textsize="14"

            android:text="@string/next_text"/>
    </com.ssomai.android.scalablelayout.ScalableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>