<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_calendar_item_1"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scale_base_height="112"
        app:scale_base_width="420">

        <TextView
            android:id="@+id/c_item1_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/font_pretendard_regular"
            android:gravity="center"
            android:text="@string/default_loading"
            android:textColor="@color/white"
            app:scale_height="30"

            app:scale_left="0"
            app:scale_textsize="20"

            app:scale_top="42"
            app:scale_width="60" />

        <ImageView
            android:id="@+id/c_item1_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/img_flag_1"

            app:scale_left="61"
            app:scale_top="25"
            app:scale_width="61"
            app:scale_height="82"
            android:contentDescription="@string/calendar_flag"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>