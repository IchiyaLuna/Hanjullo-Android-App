<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/answerTodayFragmentWidth"
    android:layout_height="@dimen/answerTodayFragmentHeight"
    android:layout_gravity="center"
    tools:context=".ProfileTodayFragment">

    <LinearLayout
        android:id="@+id/todayLayout"
        android:layout_width="@dimen/todayWidth"
        android:layout_height="@dimen/todayHeight"

        android:layout_marginTop="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:orientation="horizontal" >

        <TextView
            android:id="@+id/todayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:fontFamily="@font/pretendard_regular"
            android:gravity="end"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="@string/today_text_default"
            android:textColor="@color/white"

            android:textSize="@dimen/todayTextSize" />

        <TextView
            android:id="@+id/todayNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:fontFamily="@font/pretendard_regular"
            android:gravity="end"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="@string/today_num_default"
            android:textColor="@color/white"

            android:textSize="@dimen/todayTextSize" />

        <TextView
            android:id="@+id/todaySlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pretendard_regular"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="@string/today_slash"
            android:textColor="@color/white"

            android:textSize="@dimen/todayTextSize" />

        <TextView
            android:id="@+id/totalNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:fontFamily="@font/pretendard_regular"
            android:gravity="start"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="@string/total_num_default"
            android:textColor="@color/white"

            android:textSize="@dimen/todayTextSize" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>