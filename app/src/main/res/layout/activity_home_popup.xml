<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomePopup">

    <View
        android:id="@+id/homePopBg"
        android:layout_width="337.4dp"
        android:layout_height="311dp"

        android:layout_marginTop="120dp"
        android:background="@drawable/daily_end_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>

    <TextView
        android:id="@+id/homePopQIcon"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/pretendard_semibold"
        android:gravity="center"
        android:text="@string/home_pop_Q_icon"

        android:textColor="@color/white"
        android:textSize="19sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/homePopBg" />

    <TextView
        android:id="@+id/homePopQuestion"
        android:layout_width="146dp"
        android:layout_height="33dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/pretendard_medium"
        android:gravity="center"
        android:text="@string/home_pop_Question"

        android:textColor="@color/white"
        android:textSize="14.5sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homePopQIcon" />


    <TextView
        android:id="@+id/homePopAnswer"
        android:layout_width="100dp"
        android:layout_height="28.5dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/pretendard_semibold"
        android:gravity="center"
        android:text="@string/home_pop_Answer"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homePopQuestion" />

    <View
        android:id="@+id/view"
        android:layout_width="270dp"
        android:layout_height="2dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/homePopBg"
        app:layout_constraintTop_toBottomOf="@+id/homePopAnswer">

    </View>
</androidx.constraintlayout.widget.ConstraintLayout>