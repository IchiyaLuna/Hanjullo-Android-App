<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="40"

    android:background="@drawable/background"
    tools:context=".DailyQuestionChoiceActivity">

    <TextView
        android:id="@+id/todayQuestionText"
        android:layout_width="296dp"
        android:layout_height="28.5dp"
        android:layout_marginTop="132dp"
        android:fontFamily="@font/pretendardmedium"
        android:gravity="center"
        android:text="@string/question_today_text"

        android:textColor="@color/white"
        android:textSize="21sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="66.5dp"
        android:layout_height="35.8dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/btn_medium_style"
        android:fontFamily="@font/pretendard"

        android:stateListAnimator="@null"
        android:text="@string/next_text"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragFrame" />

    <FrameLayout
        android:id="@+id/fragFrame"
        android:layout_width="287.3dp"
        android:layout_height="315.8dp"
        android:layout_marginTop="41dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todayQuestionText">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>