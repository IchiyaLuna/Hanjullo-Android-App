<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_100"
    tools:context=".RegisterAccountActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scale_base_height="640"
        app:scale_base_width="360">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_height="30"
            app:scale_left="130"
            app:scale_top="80"
            app:scale_width="100"
            app:scale_textsize="20"

            android:fontFamily="@font/font_pretendard_semibold"
            android:gravity="center"
            android:includeFontPadding="false"

            android:text="@string/register_next_btn"

            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_height="20"
            app:scale_left="40"
            app:scale_top="130"
            app:scale_width="100"
            app:scale_textsize="18"

            android:fontFamily="@font/font_pretendard_medium"
            android:gravity="start"
            android:includeFontPadding="false"

            android:text="@string/register_phone_text"

            android:textColor="@color/white" />

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_register_input"

            app:scale_height="30"
            app:scale_left="40"
            app:scale_top="160"
            app:scale_width="190"
            app:scale_textsize="16"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:gravity="start|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:maxLength="11"
            android:inputType="phone"
            android:autofillHints="phone"
            android:fontFamily="@font/font_pretendard_regular"
            android:hint="@string/register_phone_hint_text"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/phoneCheckBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_answer_btn"

            app:scale_height="30"
            app:scale_left="250"
            app:scale_top="160"
            app:scale_width="70"
            app:scale_textsize="16"

            android:fontFamily="@font/font_pretendard_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"

            android:text="@string/register_phone_check_button_text"/>

        <EditText
            android:id="@+id/authCodeEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_register_input"

            app:scale_height="30"
            app:scale_left="40"
            app:scale_top="200"
            app:scale_width="190"
            app:scale_textsize="16"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:gravity="start|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:maxLength="6"
            android:inputType="number"
            android:autofillHints="null"
            android:fontFamily="@font/font_pretendard_regular"
            android:hint="@string/find_code_hint_text"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_height="20"
            app:scale_left="40"
            app:scale_top="240"
            app:scale_width="100"
            app:scale_textsize="18"

            android:fontFamily="@font/font_pretendard_medium"
            android:gravity="start"
            android:includeFontPadding="false"

            android:text="@string/register_name_text"

            android:textColor="@color/white" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_height="30"
            app:scale_left="40"
            app:scale_top="270"
            app:scale_width="190"
            app:scale_textsize="16"

            android:background="@drawable/bg_name_text"
            android:fontFamily="@font/font_pretendard_medium"
            android:gravity="start|center_vertical"
            android:includeFontPadding="false"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/register_name_text"

            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_height="20"
            app:scale_left="40"
            app:scale_top="310"
            app:scale_width="100"
            app:scale_textsize="18"

            android:fontFamily="@font/font_pretendard_medium"
            android:gravity="start"
            android:includeFontPadding="false"

            android:text="@string/register_id_text"

            android:textColor="@color/white" />

        <EditText
            android:id="@+id/idEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_register_input"

            app:scale_height="30"
            app:scale_left="40"
            app:scale_top="340"
            app:scale_width="190"
            app:scale_textsize="16"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:gravity="start|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:maxLength="30"
            android:inputType="textVisiblePassword"
            android:autofillHints="username"
            android:fontFamily="@font/font_pretendard_regular"
            android:hint="@string/register_id_hint_text"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/idCheckBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_answer_btn"

            app:scale_height="30"
            app:scale_left="250"
            app:scale_top="340"
            app:scale_width="70"
            app:scale_textsize="16"

            android:fontFamily="@font/font_pretendard_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"

            android:text="@string/register_name_check_button_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_height="20"
            app:scale_left="40"
            app:scale_top="380"
            app:scale_width="100"
            app:scale_textsize="18"

            android:fontFamily="@font/font_pretendard_medium"
            android:gravity="start"
            android:includeFontPadding="false"

            android:text="@string/register_password_text"

            android:textColor="@color/white" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_register_input"

            app:scale_height="30"
            app:scale_left="40"
            app:scale_top="410"
            app:scale_width="250"
            app:scale_textsize="16"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:gravity="start|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:fontFamily="@font/font_pretendard_regular"
            android:hint="@string/register_password_hint_text"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_height="20"
            app:scale_left="40"
            app:scale_top="450"
            app:scale_width="120"
            app:scale_textsize="18"

            android:fontFamily="@font/font_pretendard_medium"
            android:gravity="start"
            android:includeFontPadding="false"

            android:text="@string/register_password_check_text"

            android:textColor="@color/white" />

        <EditText
            android:id="@+id/passwordCheckEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_register_input"

            app:scale_height="30"
            app:scale_left="40"
            app:scale_top="480"
            app:scale_width="250"
            app:scale_textsize="16"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:gravity="start|center_vertical"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:maxLines="1"
            android:fontFamily="@font/font_pretendard_regular"
            android:hint="@string/register_password_check_hint_text"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/registerNextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_answer_btn"

            app:scale_height="40"
            app:scale_left="120"
            app:scale_top="540"
            app:scale_width="120"
            app:scale_textsize="18"

            android:fontFamily="@font/font_pretendard_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"

            android:text="@string/register_next_btn"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>