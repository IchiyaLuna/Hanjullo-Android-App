<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_100"
    tools:context=".ProfileActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:scale_base_width="360"
        app:scale_base_height="640" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_height="162"
            app:scale_left="0"
            app:scale_top="65"
            app:scale_width="261"

            android:contentDescription="@string/ellipse"
            app:srcCompat="@drawable/img_ellipse" />

        <ImageButton
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_height="20"
            app:scale_left="170"
            app:scale_top="137"
            app:scale_width="20"

            android:contentDescription="@string/add_btn"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn_add"
            android:background="@color/transparent"/>

        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:contentDescription="@string/profile_image"
            app:scale_height="162"
            app:scale_left="99"
            app:scale_top="65"

            app:scale_width="162"
            app:srcCompat="@drawable/img_profile_blank" />

        <LinearLayout
            android:id="@+id/helloLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_left="0"
            app:scale_top="241"
            app:scale_width="360"
            app:scale_height="26"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:fontFamily="@font/font_pretendard_bold"
                android:gravity="center_vertical|end"
                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="@string/name_text_default"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:textSize="@dimen/helloTextSize" />

            <TextView
                android:id="@+id/helloText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:fontFamily="@font/font_pretendard_bold"
                android:gravity="center_vertical|start"
                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="@string/hello_text"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:textSize="@dimen/helloTextSize" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/answerTodayFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_left="90"
            app:scale_top="272"
            app:scale_width="180"
            app:scale_height="30">

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/aroundMeTitleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_left="60"
            app:scale_top="308"
            app:scale_width="240"
            app:scale_height="20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/aroundMeTitleText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                android:fontFamily="@font/font_pretendard_semibold"
                android:gravity="bottom|start"
                android:includeFontPadding="false"
                android:text="@string/around_me_text"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:textSize="@dimen/aroundMeTitleTextSize" />


            <TextView
                android:id="@+id/keywordText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tagTextA"
                android:layout_marginEnd="5dp"

                android:fontFamily="@font/font_pretendard_regular"
                android:gravity="bottom|end"
                android:includeFontPadding="false"
                android:text="@string/keyword_text"
                android:textColor="@color/white"
                android:singleLine="true"
                android:textSize="@dimen/aroundMeTagTextSize" />

            <TextView
                android:id="@+id/tagTextA"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tagTextB"

                android:layout_marginEnd="5dp"
                android:fontFamily="@font/font_pretendard_regular"
                android:gravity="bottom|center"
                android:includeFontPadding="false"
                android:text="@string/keyword_default"
                android:textColor="@color/white"
                android:singleLine="true"
                android:textSize="@dimen/aroundMeTagTextSize" />

            <TextView
                android:id="@+id/tagTextB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:fontFamily="@font/font_pretendard_regular"
                android:gravity="bottom|center"
                android:includeFontPadding="false"
                android:text="@string/keyword_default"
                android:textColor="@color/white"
                android:singleLine="true"
                android:textSize="@dimen/aroundMeTagTextSize" />

        </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:id="@+id/aroundMeBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:scale_left="50"
                app:scale_top="334"
                app:scale_width="260"
                app:scale_height="30"

                app:srcCompat="@drawable/bg_around_me"
                android:contentDescription="@string/around_me_bg_image"/>

            <TextView
                android:id="@+id/aroundMeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:scale_left="65"
                app:scale_top="341"
                app:scale_width="230"
                app:scale_height="16"
                app:scale_textsize="14"

                android:fontFamily="@font/font_pretendard_regular"
                android:gravity="center"
                android:letterSpacing="-0.05"
                android:text="@string/around_me_example"
                android:includeFontPadding="false"

                android:textColor="@color/white"
                android:singleLine="true" />


        <TextView
            android:id="@+id/insideMeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_left="60"
            app:scale_top="400"
            app:scale_width="80"
            app:scale_height="20"
            app:scale_textsize="17"

            android:fontFamily="@font/font_pretendard_semibold"
            android:gravity="center_vertical|start"
            android:letterSpacing="-0.04"
            android:includeFontPadding="false"
            android:text="@string/inside_me_text"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/insideMeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/transparent"
            android:scaleType="fitCenter"

            android:contentDescription="@string/inside_me_btn"

            app:scale_height="20"
            app:scale_left="164"
            app:scale_top="400"
            app:scale_width="20"
            app:srcCompat="@drawable/btn_arrow_light" />

        <TextView
            android:id="@+id/behindMeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_left="60"
            app:scale_top="440"
            app:scale_width="90"
            app:scale_height="20"
            app:scale_textsize="17"

            android:includeFontPadding="false"
            android:fontFamily="@font/font_pretendard_semibold"
            android:gravity="center_vertical|start"
            android:letterSpacing="-0.04"
            android:text="@string/behind_me_text"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/behindMeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/transparent"
            android:scaleType="fitCenter"

            app:scale_left="164"
            app:scale_top="440"
            app:scale_width="20"
            app:scale_height="20"

            android:contentDescription="@string/behind_me_btn"
            app:srcCompat="@drawable/btn_arrow_light" />

        <TextView
            android:id="@+id/frontMeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_left="60"
            app:scale_top="480"
            app:scale_width="100"
            app:scale_height="20"
            app:scale_textsize="17"

            android:includeFontPadding="false"
            android:fontFamily="@font/font_pretendard_semibold"
            android:gravity="center_vertical|start"
            android:letterSpacing="-0.04"
            android:text="@string/in_front_of_me_text"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/frontMeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/transparent"
            android:scaleType="fitCenter"

            app:scale_left="164"
            app:scale_top="480"
            app:scale_width="20"
            app:scale_height="20"

            android:contentDescription="@string/in_front_of_me_btn"
            app:srcCompat="@drawable/btn_arrow_light" />

        <ImageButton
            android:id="@+id/profileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_left="30"
            app:scale_top="564"
            app:scale_width="36"
            app:scale_height="36"

            android:background="@color/transparent"
            android:contentDescription="@string/profile_btn"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon_profile" />


        <ImageButton
            android:id="@+id/rankingBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_left="118"
            app:scale_top="564"
            app:scale_width="36"
            app:scale_height="36"

            android:background="@color/transparent"
            android:contentDescription="@string/ranking_btn"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon_rank" />


            <ImageButton
                android:id="@+id/calendarBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:scale_left="206"
                app:scale_top="564"
                app:scale_width="36"
                app:scale_height="36"

                android:background="@color/transparent"
                android:contentDescription="@string/calendar_btn"

                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_calendar" />


            <ImageButton
                android:id="@+id/settingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:scale_left="294"
                app:scale_top="564"
                app:scale_width="36"
                app:scale_height="36"

                android:background="@color/transparent"
                android:contentDescription="@string/setting_btn"

                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_setting" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>