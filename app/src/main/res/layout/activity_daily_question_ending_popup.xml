<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_100"
    tools:context=".DailyQuestionEndingPopup">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scale_base_height="640"
        app:scale_base_width="360">

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_width="300"
            app:scale_height="365"
            app:scale_left="30"
            app:scale_top="90"

            android:background="@drawable/bg_daily_end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_width="120"
            app:scale_height="40"
            app:scale_left="120"
            app:scale_top="170"
            app:scale_textsize="28"

            android:fontFamily="@font/pretendard_semibold"
            android:gravity="center"
            android:text="@string/daily_end_point"

            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:scale_width="180"
            app:scale_height="30"
            app:scale_left="90"
            app:scale_top="220"
            app:scale_textsize="18"

            android:fontFamily="@font/pretendard_medium"
            android:gravity="center"
            android:text="@string/daily_end"

            android:textColor="@color/white"
            android:textSize="19sp"/>

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/white"

            app:scale_height="40"
            app:scale_left="160"
            app:scale_top="340"
            app:scale_width="40" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>